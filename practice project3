import java.io.*;
import javax.servlet.*;

public class GenericServletDemo extends GenericServlet {

    public void service(ServletRequest request, ServletResponse response)
            throws ServletException, IOException {

        // Get protocol-independent information
        String protocol = request.getProtocol();
        String remoteAddr = request.getRemoteAddr();

        // Set response content type
        response.setContentType("text/html");

        // Get a PrintWriter to write the response
        PrintWriter out = response.getWriter();

        out.println("<html><body>");
        out.println("<h2>Generic Servlet Demo</h2>");
        out.println("<p>Protocol: " + protocol + "</p>");
        out.println("<p>Remote Address: " + remoteAddr + "</p>");
        out.println("<p>This message is generated by a Generic Servlet.</p>");
        out.println("</body></html>");
    }
}
